<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:RawPostres.ViewModel"
             xmlns:model="clr-namespace:RawPostres.Model"
             x:Class="RawPostres.Views.PostreListPage"
             x:DataType="viewModel:PostreListViewModel"
             Title="Postres">

    <Grid RowDefinitions="Auto,*" Padding="0">

        <!-- Barra de bÃºsqueda -->
        <SearchBar Grid.Row="0"
                   Placeholder="Buscar postres..."
                   Text="{Binding SearchText}"
                   SearchCommand="{Binding LoadPostresCommand}"
                   Margin="10.5"/>

        <!-- Lista de postres -->
        <RefreshView Grid.Row="1"
                     IsRefreshing="{Binding IsBusy}"
                     Command="{Binding RefreshCommand}">

            <CollectionView ItemsSource="{Binding Postres}"
                            SelectionMode="Single"
                            SelectionChangedCommand="{Binding PostreSelectedCommand}"
                            SelectionChangedCommandParameter="{Binding Source={RelativeSource Self}, Path=SelectedItem}"
                            RemainingItemsThreshold="3"
                            RemainingItemsThresholdReachedCommand="{Binding LoadMorePostresCommand}">

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:Postre">
                        <Frame Margin="10.5"
                               Padding="0"
                               CornerRadius="10"
                               HasShadow="True"
                               BorderColor="Transparent">

                            <Grid RowDefinitions="200,auto">

                                <!-- Imagen del postre -->
                                <Image Grid.Row="0"
                                       Source="{Binding Imagen}"
                                       Aspect="AspectFill"
                                       HeightRequest="200"/>

                                <!-- Overlay del precio -->
                                <Frame Grid.Row="0"
                                       BackgroundColor="#CC000000"
                                       Padding="8"
                                       CornerRadius="5"
                                       HasShadow="False"
                                       HorizontalOptions="End"
                                       VerticalOptions="Start"
                                       Margin="10">
                                    <Label Text="{Binding PrecioFormateado}"
                                           TextColor="White"
                                           FontAttributes="Bold"
                                           FontSize="12"/>
                                </Frame>

                                <!-- Nombre del postre -->
                                <Label Grid.Row="1"
                                       Text="{Binding Nombre}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       Margin="10"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="2"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <!-- Indicador al cargar mÃ¡s -->
                <CollectionView.Footer>
                    <StackLayout Padding="10"
                                 IsVisible="{Binding IsLoadingMore}">
                        <ActivityIndicator IsRunning="True"
                                           Color="{StaticResource Primary}"
                                           HeightRequest="40"/>
                        <Label Text="Cargando mÃ¡s postres..."
                               HorizontalTextAlignment="Center"
                               TextColor="Gray"/>
                    </StackLayout>
                </CollectionView.Footer>

                <!-- Vista vacÃ­a -->
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center"
                                 Padding="30">
                        <Label Text="ðŸ°"
                               FontSize="48"
                               HorizontalTextAlignment="Center"
                               Margin="0,0,0,10"/>
                        <Label Text="No se encontraron postres"
                               FontSize="18"
                               HorizontalTextAlignment="Center"
                               TextColor="Gray"/>
                        <Label Text="Intenta con otra bÃºsqueda"
                               FontSize="14"
                               HorizontalTextAlignment="Center"
                               TextColor="LightGray"
                               Margin="0,5,0,0"/>
                    </StackLayout>
                </CollectionView.EmptyView>

            </CollectionView>
        </RefreshView>

        <!-- Indicador de carga inicial -->
        <ActivityIndicator Grid.Row="1"
                           IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}"
                           Color="{StaticResource Primary}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           HeightRequest="50"
                           WidthRequest="50"/>
    </Grid>
</ContentPage>